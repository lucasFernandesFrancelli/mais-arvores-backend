{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "lib": [
      "ES2020",
      "dom"
    ],
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "ES2020",
    "outDir": "./dist",
    "rootDir": ".",
    "strict": true,
    "strictPropertyInitialization": false,
    "baseUrl": "./src",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "checkJs": true,
    "diagnostics": true,
    "paths": {
      "@modules/": ["modules/"],
      "@shared/": ["shared/"],
      "@config/": ["config/"]
    },
    "typeRoots": [
      "@types",
      "./node_modules/@types",
      "./src/@types"
    ]
  },
  "exclude": [
    "assets",
    "jest.*",
    "prettier.*",
    "tsconfig.*",
    "coverage"
  ]
}